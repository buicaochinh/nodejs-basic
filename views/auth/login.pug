extends ../layouts/common

block content
    h1 Login

    if errors
      each error in errors
        .alert.alert-danger= error

    form(action="/auth/login" method="POST")
      .form-group
        label(for="email") Email
        input.form-control(type="text", id="email", name="email", value=values ? values.name : "")

        label(for="password") Password
        input.form-control(type="password", id="password", name="password", value=values ? values.phone : "")

      button.btn.btn-primary Login